<div class="text-center" style="justify-content: center">

  <h2>Регистрация</h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <center> <label for="email">Email</label></center>
      <center><%= f.email_field :email, autofocus: true, style: "width: 30%" , class: "form-control" %></center>
    </div>
    <br/>
    <div class="field">
      <center> <label for="password">Пароль</label></center>
      <center><%= f.password_field :password, style: "width: 30%", class: "form-control"%></center>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
    </div>
    <br/>
    <div class="field">
      <center> <label for="password_confirmation">Подтвердите пароль</label></center>
      <center><%= f.password_field :password_confirmation, style: "width: 30%", class: "form-control" %></center>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary", data: { turbolinks: false } %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
